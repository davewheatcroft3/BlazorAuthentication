@inherits LayoutComponentBase
@using BlazerServerAuthentication
@using BlazorServerAuthentication.Sample.Web.Pages
@inject ILoginService LoginService

<PageTitle>Blazer Server Authentication</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
             <ConfigurableErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <h1>Oh no an error!</h1>
                    <p>@context.Message</p>
                </ErrorContent>
            </ConfigurableErrorBoundary>
        </article>
    </main>
</div>
